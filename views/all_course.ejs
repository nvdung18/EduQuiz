<!doctype html>
<html lang="en">

<head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/stylesheets/bootstrap-4.0.0/bootstrap-4.0.0/dist/css/bootstrap.css">    
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body class="body-allCourse">
    <%- include('parts/header') %>
    <main class="container container-allCourse">
        <div class="setPage-setDetailsInfo d-flex mt-3 justify-content-between">
            <div class="setPageHeader">
                <div class="setPageHeader-info setPageHeader-allCourse d-flex">
                    <div class="setPageHeader-avatar">
                        <img style="border-radius: 50%; width: 65px;" class="setPageHeader-avatar--circle"
                            src="/images/84628273_176159830277856_972693363922829312_n.jpg" alt="">
                    </div>

                    <div class="setPageHeader-createdBy align-self-end ml-1 ml-3">
                        <div class="createdBy-nickName">
                            <%= userInfor.username %>
                        </div>
                        <div class="createddBy-author">
                            <%= userID %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="DashboardAllCourse-main">
            <div class="DashboardAllCourse-content">
                <div class="DashboardAllCourse-option d-flex justify-content-between">
                    <div class="dropdown dropdown-allCourse-arrangeByTime">
                        <button class="btn btn-light dropdown-toggle btn-arrangeByTime" id="btn-filterByTime" type="button" data-toggle="dropdown"
                            aria-expanded="false">
                            Đã tạo
                        </button>
                        <div class="dropdown-menu">
                            <button class="dropdown-item dropdown-item-filterByTime" type="button" value="created">Đã tạo</button>
                            <button class="dropdown-item dropdown-item-filterByTime" type="button" value="accessed">Đã truy cập</button>
                        </div>
                    </div>

                    <div class="search-course">
                        <div class="mb-3">
                            <div class="input-group is-invalid">
                                <input type="text" class="form-control" aria-describedby="validatedInputGroupPrepend"
                                    required placeholder="Tìm kiếm khóa học">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="validatedInputGroupPrepend"><i
                                            class="fa-solid fa-magnifying-glass"></i></span>
                                </div>
                            </div>
                            <!-- <div class="invalid-feedback">
                                Example invalid input group feedback
                            </div> -->
                        </div>
                    </div>

                </div>

                <div class="DashboardAllCourse-activityFeed" id="DashboardAllCourse-activityFeed-wrap">
                    <div class="DashboardAllCourse-wrapFeed">
                        <div class="activityFeed-header d-flex" >
                            <h3 style="font-size: 15px; width: 6%; margin-bottom: 0px;
                            display: flex;
                            flex-direction: column;
                            justify-content: center;">Học phần</h3>
                            <div class="DashboardFeedGroup-separator">
                                <hr class="UIHorizontalRule">
                            </div>
                        </div>
                        <div class="activityFeed-allCourse" id="activityFeed-allCourse">
                            <% allCourses.forEach(function(course){ %>
                                <div class="activityFeed-course pointer-btn">
                                    <div class="activityFeed-course__info ">
                                        <span class="activityFeed__info-numsOfTerms"><%= course.cards!=null?course.cards.length:0 %> Thuật ngữ</span>
                                        <div class="activityFeed__info-createdBy d-flex">
                                            <div class="setPageHeader-avatar">
                                                <img style="border-radius: 50%; width: 20px;" class="setPageHeader-avatar--circle mr-1"
                                                    src="<%= course.owner.imageProfile!=" "?course.owner.imageProfile:"/images/84628273_176159830277856_972693363922829312_n.jpg" %>" alt="">
                                            </div>
                                            <div class="info__createdBy-author">
                                                <%= course.owner.username %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="activityFeed-course__nameCourse">
                                        <a href="/<%= course.owner.username %>/courses/<%= course._id %>/flash-card"  style="text-decoration: none;"><%= course.titleCourse %></a>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </main>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>
    <script src="/javascripts/all_courses.js"></script>
</body>

</html>